{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
